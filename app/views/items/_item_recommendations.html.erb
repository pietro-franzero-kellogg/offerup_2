<div class="card">
  <div class="card-header d-flex align-items-center justify-content-between">
    Recommendations

    <a data-toggle="collapse" href="#item_recommendations_new_form">
      Add recommendation
    </a>
  </div>

  <ul class="list-group list-group-flush">
    <% @item.recommendations.each do |recommendation| %>
      <li class="list-group-item d-flex align-items-center justify-content-between">
        <%= link_to recommendation, recommendation %>

        <%= link_to recommendation, method: :delete, data: { confirm: "Do you really want to delete this recommendation" } do %>
          <i class="fas fa-trash-alt"></i>
        <% end %>

      </li>
    <% end %>

    <div class="card-footer">
      <div class="collapse" id="item_recommendations_new_form">
        <%= render partial: "items/item_recommendations_new_form" %>
      </div>
    </div>

  </ul>
</div>
