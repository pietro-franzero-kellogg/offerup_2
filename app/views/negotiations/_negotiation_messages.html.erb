<div class="card">
  <div class="card-header d-flex align-items-center justify-content-between">
    Messages

    <a data-toggle="collapse" href="#negotiation_messages_new_form">
      Add message
    </a>
  </div>

  <ul class="list-group list-group-flush">
    <% @negotiation.messages.each do |message| %>
      <li class="list-group-item d-flex align-items-center justify-content-between">
        <%= link_to message, message %>

        <%= link_to message, method: :delete, data: { confirm: "Do you really want to delete this message" } do %>
          <i class="fas fa-trash-alt"></i>
        <% end %>

      </li>
    <% end %>

    <div class="card-footer">
      <div class="collapse" id="negotiation_messages_new_form">
        <%= render partial: "negotiations/negotiation_messages_new_form" %>
      </div>
    </div>

  </ul>
</div>
