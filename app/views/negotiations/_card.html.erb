<div class="card mb-3">
  <h2 class="card-header h4">
    Negotiation #<%= negotiation.id %>
  </h2>

  <div class="card-body">
    <dl class="mb-1">
      <dt>Buyer</dt>
      <!-- Display buyer_id start -->
      <dd><%= negotiation.buyer_id %></dd>
      <!-- Display buyer_id end -->

      <dt>Seller</dt>
      <!-- Display seller_id start -->
      <dd><%= negotiation.seller_id %></dd>
      <!-- Display seller_id end -->

      <dt>Item</dt>
      <!-- Display item_id start -->
      <dd><%= negotiation.item_id %></dd>
      <!-- Display item_id end -->

      <dt>Completed</dt>
      <!-- Display completed start -->
      <dd><%= negotiation.completed %></dd>
      <!-- Display completed end -->

    </dl>

    <div class="row">
      <div class="col">
        <%= link_to_show_or_back negotiation, '<i class="fas fa-search-plus"></i>'.html_safe, '<i class="fas fa-chevron-left"></i>'.html_safe, class: "btn btn-block btn-outline-secondary" %>
      </div>

      <!-- Edit link negotiation start -->
      <div class="col">
        <%= link_to edit_negotiation_url(negotiation), class: "btn btn-block btn-outline-secondary" do %>
          <i class="fas fa-edit"></i>
        <% end %>
      </div>
      <!-- Edit link negotiation end -->

      <!-- Delete link negotiation start -->
      <div class="col">
        <%= link_to negotiation, method: :delete, data: { confirm: "Do you really want to delete this negotiation?" }, class: "btn btn-block btn-outline-secondary" do %>
          <i class="fas fa-trash-alt"></i>
        <% end %>
      </div>
      <!-- Delete link negotiation end -->
    </div>
  </div>

  <div class="card-footer text-muted">
    Last updated <%= time_ago_in_words(negotiation.updated_at) %> ago
  </div>
</div>
