<div class="card">
  <div class="card-header d-flex align-items-center justify-content-between">
    Recommendations

    <a data-toggle="collapse" href="#user_recommendations_new_form">
      Add recommendation
    </a>
  </div>

  <ul class="list-group list-group-flush">
    <% @user.recommendations.each do |recommendation| %>
      <li class="list-group-item d-flex align-items-center justify-content-between">
        <%= link_to recommendation, recommendation %>

      </li>
    <% end %>

    <div class="card-footer">
      <div class="collapse" id="user_recommendations_new_form">
        <%= render partial: "users/user_recommendations_new_form" %>
      </div>
    </div>

  </ul>
</div>
