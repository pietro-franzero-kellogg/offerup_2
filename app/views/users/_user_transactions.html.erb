<div class="card">
  <div class="card-header d-flex align-items-center justify-content-between">
    Transactions

    <a data-toggle="collapse" href="#user_transactions_new_form">
      Add negotiation
    </a>
  </div>

  <ul class="list-group list-group-flush">
    <% @user.transactions.each do |negotiation| %>
      <li class="list-group-item d-flex align-items-center justify-content-between">
        <!-- Show link start -->
        <%= link_to negotiation, negotiation %>
        <!-- Show link end -->

      </li>
    <% end %>

    <div class="card-footer">
      <div class="collapse" id="user_transactions_new_form">
        <!-- New associationcollection form start -->
        <%= render partial: "users/user_transactions_new_form" %>
        <!-- New associationcollection form end -->
      </div>
    </div>

  </ul>
</div>
