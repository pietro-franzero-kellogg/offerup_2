<div class="card mb-3">
  <h2 class="card-header h4">
    Recommendation #<%= recommendation.id %>
  </h2>

  <div class="card-body">
    <dl class="mb-1">
      <dt>User</dt>
      <dd>
        <% if @recommendation.user.present? %>
          <%= link_to recommendation.user, recommendation.user %>
        <% end %>
      </dd>

      <dt>Item</dt>
      <dd>
        <% if @recommendation.item.present? %>
          <%= link_to recommendation.item, recommendation.item %>
        <% end %>
      </dd>

    </dl>

    <div class="row">
      <div class="col">
        <%= link_to_show_or_back recommendation, '<i class="fas fa-search-plus"></i>'.html_safe, '<i class="fas fa-chevron-left"></i>'.html_safe, class: "btn btn-block btn-outline-secondary" %>
      </div>

      <div class="col">
        <%= link_to edit_recommendation_url(recommendation), class: "btn btn-block btn-outline-secondary" do %>
          <i class="fas fa-edit"></i>
        <% end %>
      </div>

      <div class="col">
        <%= link_to recommendation, method: :delete, data: { confirm: "Do you really want to delete this recommendation?" }, class: "btn btn-block btn-outline-secondary" do %>
          <i class="fas fa-trash-alt"></i>
        <% end %>
      </div>
    </div>
  </div>

  <div class="card-footer text-muted">
    Last updated <%= time_ago_in_words(recommendation.updated_at) %> ago
  </div>
</div>
